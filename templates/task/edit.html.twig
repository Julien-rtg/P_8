{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('task_edit', { 'id' : task.id })}) }}
            {{ form_widget(form) }}

            {% if task.isDone != 1 and app.user.roles is defined  %}
                <button type="submit" class="btn btn-success pull-right">Modifier</button>
            {% endif %}
        {{ form_end(form) }}
    </div>
{% endblock %}
